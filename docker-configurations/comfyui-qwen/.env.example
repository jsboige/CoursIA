# Configuration example pour ComfyUI avec authentification
# Copiez ce fichier vers .env et adaptez les valeurs


# API Keys for Model Downloads
# Get your tokens from:
# - HuggingFace: https://huggingface.co/settings/tokens
# - Civitai: https://civitai.com/user/account
CIVITAI_TOKEN=your_civitai_token_here
HF_TOKEN=hf_your_huggingface_token_here


# Qwen Configuration
###############################


# API Authentication
QWEN_API_TOKEN=your_qwen_api_token_here

# GPU Configuration
# CRITICAL: Use GPU_DEVICE_ID=0 for RTX 3090 (PyTorch GPU 0 = nvidia-smi GPU 1)
GPU_DEVICE_ID=0
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=0






# ComfyUI Configuration
###############################



# ComfyUI Configuration
COMFYUI_PORT=8188

# Workspace Path
# Path to ComfyUI installation in WSL - RESTORED FUNCTIONAL CONFIGURATION
COMFYUI_WORKSPACE_PATH=\\wsl.localhost\Ubuntu\home\jesse\SD\workspace\comfyui-qwen\ComfyUI

# System Configuration
TZ=Europe/Paris

# URL de l'interface ComfyUI
COMFYUI_URL=http://localhost:8188

# Identifiants pour l'authentification (optionnel)
# Si non spécifié, ComfyUI-Login utilisera le mode "invité"
COMFYUI_USERNAME=admin
COMFYUI_PASSWORD=your_secure_password_here

# Token Bearer pour l'accès API (optionnel)
# Si non spécifié, un token sera généré automatiquement
COMFYUI_BEARER_TOKEN=your_bearer_token_here

# Configuration du mode invité (true/false)
# Si true, les utilisateurs non authentifiés peuvent accéder en mode invité
GUEST_MODE_ENABLED=false

# Clé secrète pour le chiffrement (générée automatiquement)
# Ne modifiez pas cette valeur manuellement
SECRET_KEY=auto_generated_secret_key

# Configuration CORS
CORS_ENABLED=true

# Logs détaillés (true/false)
VERBOSE_LOGGING=false

# Timeout pour les requêtes API (secondes)
API_TIMEOUT=30

# Nombre maximum de tentatives de connexion
MAX_LOGIN_ATTEMPTS=3

# Durée d'expiration des sessions (heures)
SESSION_EXPIRE_HOURS=24

# Notes de configuration:
# 1. Les mots de passe sont hashés avec bcrypt dans le conteneur

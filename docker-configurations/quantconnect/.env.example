# ===============================
# QuantConnect LEAN Docker Configuration
# ===============================

# Copy this file to .env and fill in your values
# NEVER commit .env to git (already in .gitignore)

# ===============================
# QuantConnect API Credentials
# ===============================

# Your QuantConnect User ID (for cloud sync)
# Get from: https://www.quantconnect.com/account
QC_API_USER_ID=your_user_id_here

# Your QuantConnect API Token
QC_API_ACCESS_TOKEN=your_access_token_here

# ===============================
# LEAN Configuration
# ===============================

# LEAN mode (debug, release)
LEAN_MODE=release

# LEAN environment (backtesting, live, research)
LEAN_ENVIRONMENT=backtesting

# Logging level (TRACE, DEBUG, INFO, ERROR)
LOG_LEVEL=INFO

# ===============================
# Ports Configuration
# ===============================

# Python debugger port (for VSCode debugging)
DEBUG_PORT=5678

# Jupyter port (if running notebooks in container)
JUPYTER_PORT=8888

# ===============================
# Resource Limits
# ===============================

# CPU limits (adjust based on your system)
CPU_LIMIT=4
CPU_RESERVE=2

# Memory limits
MEMORY_LIMIT=8G
MEMORY_RESERVE=4G

# GPU Device ID (if using GPU)
GPU_DEVICE_ID=0

# ===============================
# API Keys (Optional)
# ===============================

# NewsAPI (for sentiment analysis - free tier)
NEWSAPI_KEY=your_newsapi_key_here

# OpenAI (for LLM trading signals)
OPENAI_API_KEY=sk-...

# Anthropic Claude (alternative LLM)
ANTHROPIC_API_KEY=sk-ant-...

# Hugging Face (for model downloads)
HUGGINGFACE_TOKEN=hf_...

# ===============================
# Other Settings
# ===============================

# Timezone
TZ=UTC

# ===============================
# Notes
# ===============================

# 1. QC_API credentials are optional for local backtesting
#    Only required for cloud sync or downloading additional data
#
# 2. NewsAPI free tier: 100 requests/day
#    Sign up at: https://newsapi.org/
#
# 3. Resource limits:
#    - Adjust CPU_LIMIT based on your CPU cores
#    - Adjust MEMORY_LIMIT based on your RAM
#    - For Deep Learning notebooks, 8GB+ RAM recommended
#
# 4. GPU support:
#    - Requires nvidia-docker installed
#    - Uncomment GPU section in docker-compose.yml
#    - Set GPU_DEVICE_ID to your GPU ID (usually 0)
#
# 5. Debug port:
#    - Port 5678 for Python debugging with ptvsd
#    - Configure in VSCode launch.json

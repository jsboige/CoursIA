# Configuration ComfyUI-Video
# Copiez ce fichier vers .env et adaptez les valeurs

# GPU Configuration
# CRITICAL: Use GPU_DEVICE_ID=0 pour RTX 3090 (PyTorch GPU 0 = nvidia-smi GPU 1)
# EXCLUSIF avec comfyui-qwen (meme GPU, ne pas lancer les deux)
GPU_DEVICE_ID=0
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=0

# Port externe (8189 pour ne pas confliter avec comfyui-qwen:8188)
COMFYUI_VIDEO_PORT=8189

# Workspace Path - repertoire ComfyUI sur le host
# Utilisez un workspace separe de comfyui-qwen pour eviter les conflits
COMFYUI_WORKSPACE_PATH=\\wsl.localhost\Ubuntu\home\jesse\SD\workspace\comfyui-video\ComfyUI

# API Keys for Model Downloads
CIVITAI_TOKEN=your_civitai_token_here
HF_TOKEN=hf_your_huggingface_token_here

# Authentification ComfyUI-Login
COMFYUI_LOGIN_ENABLED=true
COMFYUI_USERNAME=admin
COMFYUI_PASSWORD=your_secure_password_here
COMFYUI_VIDEO_TOKEN=your_bearer_token_here

# Configuration CORS
CORS_ENABLED=true

# Timeout pour les requetes API (secondes) - plus long pour video
API_TIMEOUT=600

# System
TZ=Europe/Paris

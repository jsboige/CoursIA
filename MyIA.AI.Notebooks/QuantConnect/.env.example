# ===============================
# QuantConnect AI Trading Series
# Configuration Template
# ===============================

# ===============================
# Cloud QuantConnect Configuration
# ===============================

# QuantConnect API Credentials (for MCP and cloud deployment)
# Get these from: https://www.quantconnect.com/account
QC_API_USER_ID=your_user_id_here
QC_API_ACCESS_TOKEN=your_access_token_here

# QuantConnect Organization ID (optional, for team accounts)
# QC_ORGANIZATION_ID=your_org_id_here

# ===============================
# API Keys - AI/ML Services
# ===============================

# OpenAI (for LLM notebooks: QC-26)
OPENAI_API_KEY=sk-...

# Anthropic Claude (optional alternative for LLM)
ANTHROPIC_API_KEY=sk-ant-...

# Hugging Face (for model downloads)
HUGGINGFACE_TOKEN=hf_...

# ===============================
# Alternative Data APIs (Paid tier)
# ===============================

# NewsAPI (FREE tier alternative for sentiment analysis - QC-17)
# Get free key at: https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# Tiingo News (QuantConnect paid tier, optional)
# TIINGO_API_KEY=your_tiingo_key_here

# Alpha Vantage (optional for fundamentals)
# ALPHAVANTAGE_API_KEY=your_alphavantage_key_here

# ===============================
# Local LEAN CLI Configuration (Optional)
# ===============================

# LEAN Data Directory (for local backtests)
LEAN_DATA_PATH=./data

# LEAN Results Directory
LEAN_RESULTS_PATH=./results

# LEAN Logs Directory
LEAN_LOGS_PATH=./logs

# Python Environment (for LEAN CLI)
LEAN_PYTHON_PATH=python

# ===============================
# Jupyter Configuration
# ===============================

# Jupyter Token (for remote access)
JUPYTER_TOKEN=your-secure-token

# Jupyter Port
JUPYTER_PORT=8888

# ===============================
# Development Settings
# ===============================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable Debug Mode
DEBUG=False

# ===============================
# ML/DL Configuration
# ===============================

# GPU Device (0 for first GPU, -1 for CPU)
GPU_DEVICE=0

# TensorFlow Log Level (0=all, 1=filter INFO, 2=filter WARNING, 3=filter ERROR)
TF_CPP_MIN_LOG_LEVEL=2

# Random Seed (for reproducibility)
RANDOM_SEED=42

# ===============================
# Backtesting Configuration
# ===============================

# Default Backtest Start Date
BACKTEST_START=2020-01-01

# Default Backtest End Date
BACKTEST_END=2023-12-31

# Default Initial Capital (USD)
INITIAL_CAPITAL=100000

# Default Resolution (Tick, Second, Minute, Hour, Daily)
DEFAULT_RESOLUTION=Daily

# ===============================
# Risk Management Defaults
# ===============================

# Maximum Position Size (% of portfolio)
MAX_POSITION_SIZE=0.2

# Stop Loss (% below entry)
DEFAULT_STOP_LOSS=0.05

# Take Profit (% above entry)
DEFAULT_TAKE_PROFIT=0.15

# Portfolio Heat (max % at risk)
MAX_PORTFOLIO_HEAT=0.15

# ===============================
# Docker Configuration (for local LEAN)
# ===============================

# Docker Host
DOCKER_HOST=localhost

# LEAN Docker Image Tag
LEAN_IMAGE_TAG=latest

# GPU Support (true/false)
LEAN_GPU_ENABLED=false

# ===============================
# Paper Trading Configuration
# ===============================

# Paper Trading Enabled
PAPER_TRADING=true

# Paper Trading Initial Capital
PAPER_INITIAL_CAPITAL=100000

# ===============================
# Notes
# ===============================

# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env to git (already in .gitignore)
# 3. For cloud-first workflow, only QC_API_* and AI API keys are required
# 4. For local LEAN CLI, configure LEAN_* paths
# 5. Free tier QuantConnect: No API keys needed for basic backtesting
# 6. NewsAPI free tier: 100 requests/day, good for QC-17 (Sentiment Analysis)
